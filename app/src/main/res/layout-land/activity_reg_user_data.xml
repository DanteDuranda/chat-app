<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".actControllers.RegUserData">

    <EditText
        android:id="@+id/surnameField"
        android:layout_width="288dp"
        android:layout_height="51dp"
        android:autofillHints="emailAddress"
        android:background="?android:attr/windowBackground"
        android:ems="10"
        android:hint="@string/surname_field"
        android:inputType="textEmailAddress"
        android:maxEms="15"
        android:minEms="10"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/foreNameField"
        android:layout_width="288dp"
        android:layout_height="51dp"
        android:autofillHints="emailAddress"
        android:background="?android:attr/windowBackground"
        android:ems="10"
        android:hint="@string/forename_hint"
        android:inputType="textEmailAddress"
        android:maxEms="15"
        android:minEms="10"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surnameField"
        app:layout_constraintVertical_bias="0.07999998"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/doneButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="159dp"
        android:layout_height="66dp"
        android:backgroundTint="@color/button_backgroundTint"
        android:hapticFeedbackEnabled="true"
        android:onClick="finishRegistration"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="30"
        android:text="@string/done_registration"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateOfBirthReg"
        app:layout_constraintVertical_bias="0.110000014"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="119dp"
        android:layout_height="79dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989"
        app:srcCompat="@drawable/logover3" />

    <Button
        android:id="@+id/dateOfBirthReg"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="249dp"
        android:layout_height="76dp"
        android:ems="10"
        android:text="@string/dateOfBirth"
        android:textColor="#FFFFFF"
        android:textColorHint="#FAFAFA"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="30"
        android:backgroundTint="@color/button_backgroundTint"
        android:hapticFeedbackEnabled="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foreNameField"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/userDataErrorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/error"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doneButton"
        app:layout_constraintVertical_bias="0.44" />
</androidx.constraintlayout.widget.ConstraintLayout>